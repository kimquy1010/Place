<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_adapter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/adapter_margin_bottom"
    android:layout_marginTop="@dimen/adapter_margin_top"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_category"
        android:layout_width="match_parent"
        android:layout_height="@dimen/adapter_height">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/icon_adapter_production_width"
            android:layout_height="@dimen/icon_adapter_production_height"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/adapter_icon_margin_start" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/adapter_text_margin_start"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimaryText"
            android:textSize="16sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/list_production"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_category"
        android:layout_marginStart="@dimen/frame_layout_margin_start"
        android:scrollbars="none"
        android:isScrollContainer="false"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/layout_production"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_category"
        android:layout_marginStart="@dimen/adapter_text_margin_start"
        android:orientation="vertical" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1.1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="@dimen/frame_layout_margin_start"
        android:background="@color/colorFrameLayout" />

</RelativeLayout>